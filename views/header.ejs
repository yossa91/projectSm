  <script>
    /*모바일 버거메뉴*/
    var buger = document.querySelector('.buger_btn');
    var sidemenu = document.querySelector('.m_t_menu');
    buger.addEventListener('click',function(){
      if(sidemenu.scrollHeight > 500){
        console.log('아니?');
        sidemenu.style.height = 0;      
      }else{
        sidemenu.style.height = 'calc(100vh - 60px)';
      }
    });
    
    var subm = document.querySelectorAll('.m_t_ct_menu');
    var submenus = document.querySelectorAll('.m_t_submenu');
    subm.forEach(function(el,index){
        el.onclick = function(evt){
          for(var i = 0; i< submenus.length;i++){
            submenus[i].style.height = '0';
          }
            submenus[index].style.height = submenus[index].scrollHeight + 'px';
        }
    });

    /*랭귀이이이---지 메뉴*/
    var langMenu = document.querySelector('.t_lang>a');
    var langList = document.querySelector('.t_l_list');
    
    langMenu.addEventListener('click',function(){
      if(langList.clientHeight > 100){
        langList.style.height = 0;
      }else{
        langList.style.height = langList.scrollHeight +'px';
      }
      /* 닫히는 이벤트는 footer.ejs에 같이 작성*/
    });

